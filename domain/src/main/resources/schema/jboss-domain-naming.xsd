<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
            targetNamespace="urn:jboss:domain:naming:1.0"
            xmlns="urn:jboss:domain:naming:1.0"
            elementFormDefault="qualified"
            attributeFormDefault="unqualified"
            version="1.0">
            
    <xs:element name="naming-service" type="naming-serviceType"/>
    <xs:complexType name="naming-serviceType">
        <!-- TODO include a default value? -->
        <xs:attribute name="bootstrap-socket-binding" type="xs:string">
            <xs:annotation>
                <xs:documentation>The name of the socket binding to use for the 
                socket clients use to initially contact the naming server. Must
                match a socket binding defined in the domain and available on 
                servers where this service is configured.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <!-- TODO include a default value? -->
        <xs:attribute name="bootstrap-executor" type="xs:string">
            <xs:annotation>
                <xs:documentation>The name of the executor service to use for 
                handling connections to the socket clients use to initially 
                contact the naming server. Must match a socket binding defined 
                in the domain and available on servers where this service is configured.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <!-- TODO include a default value? -->
        <xs:attribute name="remoting-connector" type="xs:string">
            <xs:annotation>
                <xs:documentation>The connector over which the actual naming
                invocations will be received. Must match a connector defined in 
                the domain and available on servers where this service is 
                configured. </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <!-- TODO is this still applicable? -->
        <xs:attribute name="callByValue" type="xs:boolean" default="false">
            <xs:annotation>
                <xs:documentation>The call by value mode. True if all lookups 
                are unmarshalled using the caller's TCL, false if in-VM lookups 
                return the value by reference. </xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>

</xs:schema>
